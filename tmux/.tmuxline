# This tmux statusbar config was created by tmuxline.vim
# on Mon, 21 Apr 2014

set-window-option -g window-style 'bg=#27292c'
set-window-option -g window-active-style 'bg=#101421'

# set -g status-bg 'colour235'
set -g status-justify 'centre'
set -g status-left-length '100'
set -g status 'on'
set -g status-right-length '100'
set -g status-right-style 'none'
set -g message-style bg='colour238',fg='colour252'
set -g message-command-style fg='colour252',bg='colour238'
set -g status-style bg='colour237','none'
set -g pane-border-style fg='colour238',bg='#27292c'
set -g pane-active-border-style fg='colour24',bg='#101421'
set -g status-left-style 'none'
setw -g window-status-activity-style bg='colour161','none',fg='colour252'
setw -g window-status-separator ''
setw -g window-status-style 'none',bg='colour235'
set -g status-left '#[fg=colour252,bg=colour24] #S #[fg=colour252,bg=colour235,nobold,nounderscore,noitalics] (#I.#P)'
set -g status-right '#[fg=colour252,bg=colour24] #($TMUX_PLUGIN_MANAGER_PATH/tmux-mem-cpu-load/tmux-mem-cpu-load --interval 2) | %l:%M | %a %b %d, %Y | #h  '
setw -g window-status-format '#[fg=colour249,bg=colour235,nobold,nounderscore,noitalics]#[fg=colour235,bg=colour250] #{window_index} | #{window_name} #[fg=colour249,bg=colour31,nobold,nounderscore,noitalics]'
setw -g window-status-current-format '#[fg=colour235,bg=colour238,nobold,nounderscore,noitalics]#[fg=colour252,bg=colour31] #{window_index} | #{window_name} | #{window_flags} #[fg=colour238,bg=colour235,nobold,nounderscore,noitalics]'
