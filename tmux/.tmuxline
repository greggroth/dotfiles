# This tmux statusbar config was created by tmuxline.vim
# on Mon, 21 Apr 2014

# set -g status-bg 'colour235'
set -g status-bg 'colour237'
set -g message-command-fg 'colour252'
set -g status-justify 'centre'
set -g status-left-length '100'
set -g status 'on'
set -g message-bg 'colour238'
set -g status-right-length '100'
set -g status-right-attr 'none'
set -g message-fg 'colour252'
set -g message-command-bg 'colour238'
set -g status-attr 'none'
# set -g pane-border-fg 'colour238'
set -g pane-border-fg 'colour238'
set -g pane-active-border-fg 'colour31'
set -g pane-active-border-style bg=default
set -g status-left-attr 'none'
setw -g window-status-attr 'none'
setw -g window-status-activity-bg 'colour161'
setw -g window-status-activity-attr 'none'
setw -g window-status-activity-fg 'colour252'
setw -g window-status-separator ''
setw -g window-status-bg 'colour235'
set -g status-left '#[fg=colour232,bg=colour252] #S #[fg=colour252,bg=colour235,nobold,nounderscore,noitalics] (#I.#P)'
set -g status-right '#[fg=colour238,bg=colour235,nobold,nounderscore,noitalics]#[fg=colour252,bg=colour238] %l:%M | %a %b %d, %Y | #h | #(/usr/local/bin/battery -t)#[bg=colour238]  #[fg=colour252,bg=colour238,nobold,nounderscore,noitalics]'
setw -g window-status-format '#[fg=colour249,bg=colour235,nobold,nounderscore,noitalics]#[fg=colour235,bg=colour250] #{window_index} | #{window_name} #[fg=colour249,bg=colour31,nobold,nounderscore,noitalics]'
setw -g window-status-current-format '#[fg=colour235,bg=colour238,nobold,nounderscore,noitalics]#[fg=colour252,bg=colour31] #{window_index} | #{window_name} | #{window_flags} #[fg=colour238,bg=colour235,nobold,nounderscore,noitalics]'
